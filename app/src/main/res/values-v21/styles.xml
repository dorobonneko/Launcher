<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="Theme" parent="@style/BaseWallpaperTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>item>
        <item name="android:colorControlActivated">@color/launcher_accent_color</item>
        <item name="android:colorAccent">@color/launcher_accent_color</item>
        <item name="android:colorPrimary">@color/launcher_accent_color</item>
    </style>
	<style name="Settings" parent="Preference">
		<item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
		<item name="android:statusBarColor">#dddddd</item>item>
		<item name="android:colorControlActivated">@color/launcher_accent_color</item>
        <item name="android:colorAccent">@color/launcher_accent_color</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="android:titleTextColor">@color/launcher_accent_color</item>
        <!--<item name="android:colorPrimary">@color/launcher_accent_color</item>-->
	</style>
	<style name="TitleText">
		<item name="android:textColor">@color/launcher_accent_color</item>
	</style>
	<style name="Dialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
		<item name="android:colorControlActivated">@color/launcher_accent_color</item>
        <item name="android:colorAccent">@color/launcher_accent_color</item>
        <item name="android:colorPrimary">@color/launcher_accent_color</item>
	</style>
</resources>
